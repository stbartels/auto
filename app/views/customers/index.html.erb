<h1>Listing customers</h1>

<table class="display_table">
  <tr>
    <th class="column_width">Customer ID</th>
    <th class="column_width">Customer name</th>
    <th class="column_width">Service type</th>
    <th class="column_width">Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.customer_id %></td>
    <td><%= customer.customer_name %></td>
    <td><%= customer.service_type %></td>
    <td><%= customer.date %></td>
    <td class="option"><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <tr>
  	<td colspan="7"> <hr /> </td>
  </tr>
<% end %>
</table>

<br />

