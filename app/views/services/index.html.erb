<h1>Listing services</h1>

<table class="display_table">
  <tr>
    <th class="column_width">Service type</th>
    <th class="description_width">Description</th>
    <th class="column_width">Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.service_type %></td>
    <td><%= service.description %></td>
    <td><%= service.price %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <tr>
  	<td colspan="6"> <hr /> </td>
  </tr>
<% end %>
</table>

